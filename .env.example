# Environment Configuration for GPT OSS MCP Server
# Copy this file to .env and update with your actual values

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Hugging Face API Token
HF_TOKEN=your_huggingface_token_here

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token

# OpenAI Configuration (if using OpenAI models)
OPENAI_API_KEY=your_openai_api_key

# Anthropic Configuration (if using Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Server Ports Configuration
PYTHON_SERVER_PORT=8000
BROWSER_SERVER_PORT=8001
SYSTEM_OPS_SERVER_PORT=8002
COMMUNICATION_SERVER_PORT=8003
IDE_SERVER_PORT=8004
GITHUB_SERVER_PORT=8005
VOICE_UI_SERVER_PORT=8006
ORCHESTRATOR_PORT=9000

# Database Configuration (if using PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aios
POSTGRES_USER=aios
POSTGRES_PASSWORD=your_secure_password

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Email Configuration (for notifications)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Twilio Configuration (for SMS/voice)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/ai-os.log

# Development/Production Settings
ENVIRONMENT=development
DEBUG=true

# File System Configuration
WORKSPACE_DIR=/workspace
TEMP_DIR=/tmp/ai-os
MAX_FILE_SIZE=100MB

# Voice Configuration
VOICE_LANGUAGE=en-US
VOICE_SPEED=200
VOICE_VOLUME=1.0

# Browser Configuration
BROWSER_HEADLESS=false
BROWSER_TIMEOUT=30
BROWSER_USER_AGENT=Mozilla/5.0 (compatible; AI-OS-Bot)

# System Configuration
MAX_CONCURRENT_PROCESSES=10
PROCESS_TIMEOUT=300
MEMORY_LIMIT=2GB
CPU_LIMIT=2

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin123

# Network Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30